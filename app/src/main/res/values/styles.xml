<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:homeAsUpIndicator">@mipmap/ic_jar_active</item>
    </style>

    <style name="SettingTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorPrimary">@color/background</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:homeAsUpIndicator">@mipmap/ic_back</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/splash_font</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#64f1f1f1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#a1a0a0</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/login_with_facebook</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
    </style>

    <style name="splashScreen" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:background">@drawable/splash</item>
    </style>

</resources>
