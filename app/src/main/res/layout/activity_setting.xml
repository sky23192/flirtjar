<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_login"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="10dp"
              android:paddingLeft="10dp"
              android:paddingRight="9dp"
              android:paddingTop="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Discovery Settings"
                    android:textColor="@color/black"
                    android:textSize="22dp"/>

            </LinearLayout>

            <LinearLayout

                android:id="@+id/layout_show_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/setting_card"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/tv_lbl_showme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show me"
                    android:textColor="#79BADD"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:id="@+id/layout_man"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_man"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:text="Man"
                        android:textColor="@color/splash_font"
                        android:textSize="18dp"
                        android:textStyle="bold"/>

                    <Switch
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:theme="@style/SwitchTheme"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_woman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_woman"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:text="Woman"
                        android:textColor="@color/splash_font"
                        android:textSize="18dp"
                        android:textStyle="bold"/>

                    <Switch
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:theme="@style/SwitchTheme"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>