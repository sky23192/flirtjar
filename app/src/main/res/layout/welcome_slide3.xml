<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_welcomeSlide"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_lbl31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lets flirt!"
        android:textColor="#79BADD"
        android:textSize="28dp"/>

    <TextView
        android:id="@+id/tv_lbl32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Chat, flirt, send gifts and more exciting features"
        android:textColor="#79BADD"
        android:textSize="24dp"
        android:typeface="monospace"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_welcome_3"/>
</LinearLayout>