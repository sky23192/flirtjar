<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:ignore="MissingPrefix">

    <ImageButton
        android:id="@+id/ib_settings"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_setting"/>


    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_profilePicture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/image_btn_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|bottom"
            android:background="@mipmap/ic_edit"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_username"
        fontPath="fonts/Righteous-Regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="NANDITA"
        android:textSize="20sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_like"/>

        <TextView
            fontPath="fonts/Righteous-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/liked"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_likeCount"
            fontPath="fonts/Righteous-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="18sp"
            tools:text="27 >"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_visitor"/>

        <TextView
            fontPath="fonts/Righteous-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visited"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_visitedCount"
            fontPath="fonts/Righteous-Regular.ttf"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="18sp"
            tools:text="113 >"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_superlike_gradient"/>

        <TextView
            fontPath="fonts/Righteous-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Superliked"

            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_superlikeCount"
            fontPath="fonts/Righteous-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="right"
            android:textSize="18sp"
            tools:text="113 >"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/ic_visitor"/>

        <TextView
            fontPath="fonts/Righteous-Regular.ttf"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skipped"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_skipCount"
            fontPath="fonts/Righteous-Regular.ttf"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="18sp"
            tools:text="1 >"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#cccccc"/>


</LinearLayout>
